@using Template.Models
@typeparam TEnum where TEnum: struct, Enum
@code
{
    [Parameter]
    public TEnum Value { get; set; }
    
    [Parameter]
    public EventCallback<TEnum> ValueChanged { get; set; }
    
    [Parameter]
    public string Label { get; set; }
}

<MudSelect Label="Payment Type" T="TEnum" @bind-Value="Value">
    @foreach (var enumValue in (TEnum[])Enum.GetValues(typeof(TEnum)))
    {
        <MudSelectItem T="TEnum" Value="@enumValue" ValueChanged="@ValueChanged" Label="@Label">@enumValue.GetDisplayName()</MudSelectItem>
    }
</MudSelect>